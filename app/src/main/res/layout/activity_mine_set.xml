<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/maincolor"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/mineset_back_imgbtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:background="@mipmap/back"/>
        <TextView
            android:id="@+id/textview_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center|left"
            android:layout_weight="2"/>
        <View android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_newversion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/newapp_image"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="版本更新"
            android:textSize="15sp"
            android:textColor="@color/black"
             />
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center|right"
                android:padding="10dp"
                android:clickable="false"
                android:drawableRight="@mipmap/arrow_next"
                android:drawablePadding="10dp"
                android:text="V2.0"
                android:textSize="15sp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/ll_clear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/clear_image"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="清理缓存"
                android:textSize="15sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_clear_data"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center|right"
                android:padding="10dp"
                android:clickable="false"
                android:drawableRight="@mipmap/arrow_next"
                android:drawablePadding="10dp"
                android:text="32M"
                android:textSize="15sp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/about_image"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:clickable="true"
                android:drawablePadding="20.0dip"
                android:drawableRight="@mipmap/arrow_next"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="关于我们"
                android:textSize="15sp"
                android:textColor="@color/black" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/corners_maincolor_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="退出登录"/>

</LinearLayout>