<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/maincolor"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/evluate_orders_back_imgbtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待评价"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:layout_weight="3"/>
        <View android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>
    <onetreeshopsapp.com.onetreeshops.utils.view.XListView
        android:id="@+id/lv_toevaluate_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none"/>
    <ImageView
        android:id="@+id/iv_toevaluate_orders_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:src="@mipmap/no_data" />

    <TextView
        android:id="@+id/tv_toevaluate_orders_nodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="暂无待评价订单数据！"
        android:textColor="@color/gray"
        android:textSize="14sp" />

</LinearLayout>