    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:id="@+id/cb_topay_isselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:padding="5dp"
            android:button="@drawable/selector_checkbox"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_topayorders_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/cb_topay_isselect"
            android:drawableRight="@mipmap/arrow_next"
            android:drawablePadding="10dp"
            android:text="dddddd"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_topayorders_paystadu"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="fffff"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="#EA5520"
            android:layout_height="wrap_content" />
    </RelativeLayout>
