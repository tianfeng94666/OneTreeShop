<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@drawable/corners_white_bg"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="32dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="32dp"
                  android:text="ip及端口号:"/>
        <EditText android:id="@+id/EditText_ip" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="192.168.1.253"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="32dp"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="32dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="32dp"
                  android:text="终端号:"/>
        <TextView android:id="@+id/Textview_terminl" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="32dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/but_confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:background="@drawable/selector_red_bg"
            android:text="确定"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/but_cancle"
            android:layout_width="0dp"

            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:background="@drawable/selector_maincolor_bg"
            android:text="取消"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

    </LinearLayout>
</LinearLayout>