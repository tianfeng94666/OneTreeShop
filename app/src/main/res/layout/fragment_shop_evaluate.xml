<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_shop_evaluate_scoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_orange"
            android:textSize="25sp"
            android:text="4.5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:text="综合评分"/>
    </LinearLayout>
    <View android:layout_width="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.7"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:text="配送评分"/>
            <RatingBar
                android:id="@+id/rb_peisong_pingfen"
                android:progressDrawable="@drawable/layer_live_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:numStars="5"
                android:rating="3"
                android:isIndicator="true"
                />
            <TextView
                android:id="@+id/tv_peigsong_fenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/bg_orange"
                android:text="4.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:text="商品评分"/>
            <RatingBar
                android:id="@+id/rb_shop_pingfen"
                android:progressDrawable="@drawable/layer_live_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:numStars="5"
                android:rating="3"
                android:isIndicator="true"
                />
            <TextView
                android:id="@+id/tv_shop_fenshu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/bg_orange"
                android:text="4.5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:padding="5dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pingjia_btn_select"
            android:button="@null"
            android:gravity="center"
            android:text="全部(0)"
            android:textColor="@color/white" />
        <RadioButton
            android:id="@+id/rb_good"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pingjia_btn_select"
            android:button="@null"
            android:gravity="center"
            android:text="好评(0)"
            android:textColor="@color/producttextcolor" />


        <RadioButton
            android:id="@+id/rb_mid"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pingjia_btn_select"
            android:button="@null"
            android:gravity="center"
            android:text="中评(0)"
            android:textColor="@color/producttextcolor" />
        <RadioButton
            android:id="@+id/rb_bad"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pingjia_btn_select"
            android:button="@null"
            android:gravity="center"
            android:text="差评(0)"
            android:textColor="@color/producttextcolor" />

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pingjia_cont"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:visibility="visible"
            android:scrollbars="none"/>
        <ImageView
            android:id="@+id/iv_pingjia_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="30dp"
            android:visibility="visible"
            android:src="@mipmap/no_data" />

        <TextView
            android:id="@+id/tv_pingjia_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pingjia_nodata"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:text="该商家暂未获得此类评价哦！"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>