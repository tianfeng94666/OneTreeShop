<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="95dp"
              android:padding="5dp"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="75dp"
                  android:layout_marginBottom="10dp"
    >
        <ImageView
            android:id="@+id/iv_product_image"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:gravity="top"
                android:text="产品名称"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:layout_marginBottom="5dp"
                          android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="bottom"
                    android:text="￥123"
                    android:textColor="@color/but_confirm"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_product_unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="/kg"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">

                <TextView
                    android:text="月售"
                    android:layout_marginLeft="4dp"
                    android:layout_width="0dp"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                />
                <TextView
                    android:text=""
                    android:id="@+id/tv_saledNumber"
                    android:layout_width="0dp"
                    android:gravity="top|center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="1"
                          android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/ib_product_reduce"
                    android:layout_width="0dp"
                    android:visibility="invisible"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/reduce"
                />
                <TextView
                    android:id="@+id/tv_product_amount"
                    android:layout_width="0dp"

                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                />
                <ImageView
                    android:id="@+id/ib_product_add"
                    android:layout_width="0dp"
                    android:gravity="bottom"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/add"
                />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/gray"/>
</LinearLayout>