<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fragment_logo_mine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
           android:gravity="center"
            android:background="@color/maincolor"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip" >
            <onetreeshopsapp.com.onetreeshops.utils.view.CircleImageView
                android:id="@+id/my_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/myimage"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="15866588"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_topay_orders"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/iv_topay_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@mipmap/topay"
                        />
                    <TextView
                        android:id="@+id/tv_topay_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_topay_orders"
                        android:gravity="center"
                        android:background="@drawable/shap_oval_red_bg"
                        android:text=""
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textSize="11sp"/>
                </RelativeLayout>
                <TextView android:id="@+id/tv_nopay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="待付款"/>
            </LinearLayout>

            <View android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_complete_orders"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_complete_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@mipmap/compelect"
                    />
                <TextView android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="待发货"/>
            </LinearLayout>
            <View android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <LinearLayout
                android:id="@+id/ll_toevaluate_orders"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/iv_toevaluate_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@mipmap/topay"
                        />
                    <TextView
                        android:id="@+id/tv_toevaluate_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_toevaluate_orders"
                        android:gravity="center"
                        android:background="@drawable/shap_oval_red_bg"
                        android:text=""
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textSize="11sp"/>
                </RelativeLayout>
                <TextView android:id="@+id/tv_toevaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="待评价"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_mine_orders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/myorders"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:clickable="false"
                android:drawableRight="@mipmap/arrow_next"
                android:padding="10dp"
                android:text="我的订单"
                android:textSize="15dp"
                android:textColor="@color/black"
                 />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/ll_mine_receipt_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView

                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/myaddres"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/arrow_next"
                android:padding="10dp"
                android:text="收货地址"
                android:textSize="15dp"
                android:textColor="@color/black"
                 />

        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_mine_set"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/myset"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:clickable="false"
                android:drawablePadding="20dp"
                android:drawableRight="@mipmap/arrow_next"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="设置"
                android:textSize="15dp"
                android:textColor="@color/black"
                 />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="@color/gray"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="7"
        />

</LinearLayout>