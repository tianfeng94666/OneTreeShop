<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <onetreeshopsapp.com.onetreeshops.utils.view.CircleImageView
            android:id="@+id/iv_guke_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/myimage"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/bg_gray_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shop_pingjia_gukename"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="13*****66"/>
                <TextView
                    android:id="@+id/tv_shop_pingjia_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="2016-12-23 14:25"/>
            </LinearLayout>
            <RatingBar
                android:id="@+id/rb_guke_pingfen"
                android:progressDrawable="@drawable/layer_live_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:rating="3"
                android:isIndicator="true"
                />
            <TextView
                android:id="@+id/tv_guke_pinjianeiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="饿了么，不好吃"/>
            <TextView
                android:id="@+id/tv_shangjia_huifh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray_text"
                android:text="商家回复：亲，欢迎再次光临！"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>