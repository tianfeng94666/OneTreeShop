<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray_text"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView android:id="@+id/orders_detile_product_image"
            android:layout_width="0dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_weight="0.4"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/orders_detile_product_name"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="土豆"/>
        <TextView
            android:id="@+id/orders_detile_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:text="￥15.6/kg"/>
        </LinearLayout>
        <TextView
            android:id="@+id/orders_detile_product_num"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:textSize="14sp"
            android:padding="5dp"
            android:text="X5111"/>
    </LinearLayout>

</LinearLayout>